</properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.lex.showcase</groupId>
                <artifactId>base-core</artifactId>
                <version>0.1</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

